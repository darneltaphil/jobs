<% content_for :title do %>
  <%= "Add New Job | #{t('app.name')}" %>
<% end %>
<main class="dc-companies-new">
  <article>
    <section class="dc-page--header">
      <div class="uk-container">
        <div class="uk-grid">
          <div class="uk-width-1-2@m uk-margin-small-bottom">
            <h1 class="page--title">Add New Job</h1>
          </div>
          <div class="uk-width-1-2@m">
            <p class="dc-job-meta uk-text-right uk-text-middle"></p>
          </div>
        </div>
      </div>
    </section>

    <section class="dc-main--content">
      <div class="uk-container">
        <div class="uk-grid" >
          <div class="uk-flex-last uk-flex-first@m uk-width-expand@m">
            <div class="uk-card uk-card-default uk-card-body dc-content-container">
              <% if user_signed_in? %>
                <%= render 'form', job: @job, companies: @companies %>
                <%= link_to 'Back', jobs_path %>
              <% else %>
                <p>Please sign in to create a job listing</p>
                <%= link_to('Sign in', new_user_session_path) %>
                <p>or</p>
                <%= link_to('Sign up', new_user_registration_path) %>
              <% end %>
            </div>
          </div>

          <div class="uk-flex-first uk-flex-last@m uk-text-left uk-width-1-4@m">
            <div class="uk-card uk-card-default uk-card-body uk-margin-bottom dc-content-container">
              <h3>Instructions</h3>
              <p>Provide candid, relevant information for best results.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </article>
</main>
