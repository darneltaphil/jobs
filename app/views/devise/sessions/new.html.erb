<% content_for :title do %>
  <%= "Log In | #{t('app.name')}" %>
<% end %>
<main class="dc-home">
  <article>
    <section class="dc-page--header">
      <div class="uk-container">
        <h1 class="page--title">Sign In</h1>
      </div>
    </section>

    <section class="dc-main--content">
      <div class="uk-container">
        <div class="uk-grid" >
          <div class="uk-width-expand@m">
            <div class="uk-card uk-card-default uk-card-body dc-content-container">
              <% if alert %>
                <span class="alert">
                  <%= alert %>
                </span>
              <% end %>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'uk-form-horizontal'}) do |f| %>
                <%= devise_error_messages! %>    
                
                <div class="uk-margin">
                  <%= f.label :email, :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "uk-input" %>
                  </div>
                </div>
                
                <div class="uk-margin">
                  <%= f.label :password, :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.password_field :password, autocomplete: "off", :class => "uk-input" %>
                  </div>
                </div>
                
                <% if devise_mapping.rememberable? %>
                  <div class="uk-margin">
                    <div class="form-controls">
                      <label class="uk-form-label">
                        <input name="user[remember_me]" type="hidden" value="0" /><input class="uk-checkbox" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" />
                        Remember Me
                      </label>
                    </div>
                  </div>
                <% end %>
                
                <div class="uk-margin">
                  <%= f.submit "Log in", :class => "uk-button uk-button-primary" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>

          <div class="uk-text-center uk-width-1-3@m">
            <div class="uk-card uk-card-default uk-card-body uk-margin-bottom dc-content-container">
              
            </div>
          </div>
      </div>
    </section>
  </article>
</main>
